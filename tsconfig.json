{
    "compilerOptions": {
      "moduleResolution": "node",
      "module": "CommonJS",
      "target": "ES2022",
      "noImplicitAny": true,
      "preserveConstEnums": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "baseUrl": "./",
      "paths": {
        "@/*": ["src/*"]
      },
    },
    "include": ["./src/**/*.ts", "./.shims/**/*.d.ts"],
    "exclude": ["node_modules"]
}